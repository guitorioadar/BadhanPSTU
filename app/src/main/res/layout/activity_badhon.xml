<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vaidoos.guitorio.badhanpstu.Badhon">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:text="একের রক্ত অন্যের জীবন,রক্তই হোক আত্মার বাঁধন"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="বাঁধন"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#E80E21"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="(স্বেচ্ছায় রক্তদাতাদের সংগঠন)"/>


        </LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/badhon_logo"
            android:id="@+id/imageView3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BADHAN"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="#E80E21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="(A voluntary Blood Donors’ organization)"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="22dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="সাধারন সম্পাদকের প্রতিবেদন- ২০১৬"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="২০০৮ সালের ২৫শে ফেব্রুয়ারিতে  মুমূর্ষু  রোগীদের  সেচ্ছায় রক্তদান ও অন্যান্য মানবসেবা মূলক কার্যক্রম পরিচালনার জন্য পটুয়াখালী বিজ্ঞান ও প্রযুক্তি   বিশ্ববিদ্যালয় এ পরিবার হিসেবে  ‘বাঁধন’ এর পথচলা শুরু।  যা সময়ের পরিক্রমায় আজ  বাঁধন পবিপ্রবি ইউনিটে  উপনিত হয়েছে । বর্তমানে এর সাতটি হল নিজ নিজ ক্রমধারাই দিপ্ততার সাথে কাজ যাচ্ছে এবং বাঁধন পবিপ্রবি ইউনিটের পরিসরকে আরো বিস্তৃত করছে। বাঁধন পবিপ্রবি ইউনিট সমগ্র পটুয়াখালী জেলা ও বরিশাল বিভাগে সাফল্য ও নিষ্ঠার সাথে কাজ করে যাচ্ছে ও সুনাম অর্জন করেছে। একের রক্ত অন্যের জীবন , রক্তই হোক আত্মার বাঁধন এই মূল মন্ত্রকে সামনে রেখে মানবতার সেবায় নিয়োজিত বাঁধন পবিপ্রবি ইউনিট স্বপ্ন দেখে সেই দিনের যেদিন সেচ্ছায় রক্তদানে সবাই এগিয়ে আসবে। জয় হোক মানবতার জয় হোক বাঁধনের।"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="১। ২১শে, ফেব্রুয়ারি  মহান ভাষা দিবসে পুষ্পস্তবক অর্পন ।"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="২। ২৫শে, ফেব্রুয়ারি বাঁধন পবিপ্রবি ইউনিটের শুভ জন্মদিন উদযাপন।"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="৩। বিশ্ব রক্তদান সম্পর্কে সচেতনতা মূলক অনুষ্ঠান ও ব্লাড গ্রুপিং শেখানো- ৬ই, জুন।"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="৪। ইফতার মাহফিল ও দোয়া অনুষ্ঠান।"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="৫। রাজবাড়িতে বন্যা কবলিতদের জন্য ত্রান ও সাহায্য প্রদান (১১০০০ টাকা) সমমূল্যের।"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="৬। ১৬ই,ডিসেম্বর মহান বিজয় দিবসে পুষ্পস্তবক অর্পন ।"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="৭। ভর্তিচ্ছু নবীন ছাত্র ছাত্রীদের বিনা মূল্যে ব্লাড গ্রুপিং করা- ২২শে, ডিসেম্বর।"/>

    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="জাভেদ মিয়ানদাদ"
                android:textColor="#000"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="সভাপতি"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="বাঁধন,পবিপ্রবি ইউনিট,\nপবিপ্রবি"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="বায়জিদ মেহেদী"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="সাধারণ সম্পাদক"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="বাঁধন,পবিপ্রবি ইউনিট,\nপবিপ্রবি"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</ScrollView>
